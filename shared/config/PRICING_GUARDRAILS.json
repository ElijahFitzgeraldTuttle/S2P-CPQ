{
  "version": "1.0.0",
  "description": "CPQ Integrity Auditor - Pricing Guardrails Configuration",
  
  "marginRules": {
    "minimumGrossMargin": 0.45,
    "warningThreshold": 0.50,
    "description": "Minimum allowable gross margin before CEO override required"
  },
  
  "travelRules": {
    "flyOutDistanceThreshold": 250,
    "minimumFlyOutCost": 500,
    "requireTravelCostForRemote": true,
    "perDiemRate": 75,
    "hotelNightRate": 150,
    "description": "If distance > threshold or dispatch is remote, travel cost cannot be $0"
  },
  
  "lodPremiums": {
    "description": "Expected price multipliers for each LoD level relative to LoD 200 baseline",
    "200": 1.0,
    "300": 1.25,
    "350": 1.50,
    "tolerancePercent": 10
  },
  
  "scanDurationRules": {
    "description": "Expected scan productivity (sqft per hour) by building complexity",
    "productivity": {
      "simple": 15000,
      "standard": 10000,
      "complex": 6000,
      "highDetail": 4000
    },
    "buildingTypeComplexity": {
      "1": "simple",
      "2": "standard",
      "3": "standard",
      "4": "standard",
      "5": "standard",
      "6": "complex",
      "7": "standard",
      "8": "complex",
      "9": "complex",
      "10": "simple",
      "11": "simple",
      "12": "standard",
      "13": "complex",
      "14": "simple",
      "15": "simple",
      "16": "highDetail"
    },
    "minimumHoursPerProject": 2,
    "tolerancePercent": 25
  },
  
  "historicalRules": {
    "description": "Compare against previous quotes for same client",
    "pricePerSqftVarianceWarning": 0.15,
    "pricePerSqftVarianceBlock": 0.30,
    "lookbackQuotes": 3
  },
  
  "sqftAuditRules": {
    "description": "Verify sqft matches previous scans of same address",
    "tolerancePercent": 5,
    "flagIfNoHistory": false
  },
  
  "overrideRoles": {
    "description": "Roles that can approve override requests",
    "approvers": ["ceo", "admin", "sales_director"]
  },
  
  "severityLevels": {
    "info": {
      "code": "INFO",
      "blocking": false,
      "description": "Informational note, no action required"
    },
    "warning": {
      "code": "WARNING",
      "blocking": false,
      "description": "Potential issue, review recommended"
    },
    "error": {
      "code": "ERROR",
      "blocking": true,
      "description": "Policy violation, CEO override required"
    }
  }
}
